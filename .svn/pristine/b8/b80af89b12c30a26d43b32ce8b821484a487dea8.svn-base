<ion-view view-title="选择联系人">
  <ion-nav-bar class="bar-positive">
    <ion-nav-back-button>
    </ion-nav-back-button>
  </ion-nav-bar>
  <ion-content>
    <ion-list>
      <ion-item ng-repeat="item in Person" type="item-text-wrap" style="margin:8px;border:1px solid #317ff2;border-radius: 10px;" ng-click="getDet(item)">
        <div style="margin-bottom:8px;padding-top:5px;height: 25px;width: 100%;border-top-left-radius: 10px;border-top-right-radius: 10px;font-size: 14px;color:#4d4d4d;word-wrap: break-word;">
          联系人：{{item.name}}
        </div>
        <div style="height: 30px;width: 100%;border-top-left-radius: 10px;border-top-right-radius: 10px;text-align: center;margin: 0px;">
          联系人职位：{{item.position}}
        </div>
        <div style="min-height: 25px;width: 100%;border-radius: 10px;margin-top: 5px; font-size: 16px;color:#4d4d4d;word-wrap: break-word;">
          联系人电话：{{item.phone}}
        </div>
      </ion-item>
    </ion-list>
  </ion-content>
</ion-view>
